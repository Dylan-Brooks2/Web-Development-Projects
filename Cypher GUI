import javax.swing.*;
import java.awt.event.*;

public class cypherGUI {
    public static String encrypt(String text, int shift) {
        StringBuilder result = new StringBuilder();

        for (char character : text.toCharArray()) {
            if (Character.isLetter(character)) {
                char base = Character.isLowerCase(character) ? 'a' : 'A';
                char shifted = (char) ((character - base + shift) % 26 + base);
                result.append(shifted);
            } else {
                result.append(character);
            }
        }
        return result.toString();
    }

    public static void main(String[] args) {
        JFrame frame = new JFrame("Caesar Cipher");
        frame.setSize(350, 200);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(null);

        JLabel label1 = new JLabel("Enter text:");
        label1.setBounds(10, 10, 100, 25);
        frame.add(label1);

        JTextField textField = new JTextField();
        textField.setBounds(120, 10, 200, 25);
        frame.add(textField);

        JLabel label2 = new JLabel("Shift key (0-25):");
        label2.setBounds(10, 50, 100, 25);
        frame.add(label2);

        JTextField shiftField = new JTextField();
        shiftField.setBounds(120, 50, 50, 25);
        frame.add(shiftField);

        JButton encryptButton = new JButton("Encrypt");
        encryptButton.setBounds(10, 90, 100, 25);
        frame.add(encryptButton);

        JLabel resultLabel = new JLabel("Encrypted Text: ");
        resultLabel.setBounds(10, 130, 300, 25);
        frame.add(resultLabel);

        encryptButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                String inputText = textField.getText();
                int shiftKey = Integer.parseInt(shiftField.getText()); // No try/catch
                String encrypted = encrypt(inputText, shiftKey);
                resultLabel.setText("Encrypted Text: " + encrypted);
            }
        });

        frame.setVisible(true);
    }
}
